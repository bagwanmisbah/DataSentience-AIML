# Environment variables for Agricultural Dashboard
# Copy this to .env and update with your values

# Weather API Configuration
OPENWEATHER_API_KEY=demo_mode
WEATHER_CACHE_DURATION=3600

# Application Settings
DEBUG_MODE=True
DEMO_MODE=True
DEFAULT_LANGUAGE=en

# Database Configuration (for future expansion)
DATABASE_URL=sqlite:///agricultural_data.db

# API Rate Limits
WEATHER_API_RATE_LIMIT=1000
PRICE_API_RATE_LIMIT=500

# UI Configuration
THEME=light
MOBILE_OPTIMIZED=True
ENABLE_ANALYTICS=False
